<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#131111"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnCharacters"
        android:layout_width="134dp"
        android:layout_height="46dp"
        android:layout_marginTop="44dp"
        android:backgroundTint="#977D7D"
        android:text="Personajes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/brakinkbadlogo" />

    <Button
        android:id="@+id/btnEpisodes"
        android:layout_width="134dp"
        android:layout_height="46dp"
        android:layout_marginTop="20dp"
        android:text="Episodios"
        android:backgroundTint="#977D7D"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCharacters" />

    <Button
        android:id="@+id/btnQuotes"
        android:layout_width="134dp"
        android:layout_height="46dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#977D7D"
        android:text="Frases"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnEpisodes" />

</androidx.constraintlayout.widget.ConstraintLayout>