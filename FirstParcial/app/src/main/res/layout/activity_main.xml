<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="177dp"
        android:layout_height="37dp"
        android:layout_marginTop="28dp"
        android:text="Control de productos"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:paddingTop="15px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtName"
        android:layout_width="180dp"
        android:layout_height="38dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Nombre"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle" />

    <EditText
        android:id="@+id/txtCode"
        android:layout_width="158dp"
        android:layout_height="39dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="40dp"
        android:ems="10"
        android:hint="Codigo"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle" />

    <EditText
        android:id="@+id/txtValue"
        android:layout_width="180dp"
        android:layout_height="39dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:hint="Valor"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtName" />

    <CheckBox
        android:id="@+id/checkIva"
        android:layout_width="165dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:text="IVA"
        app:layout_constraintStart_toEndOf="@+id/txtValue"
        app:layout_constraintTop_toBottomOf="@+id/txtCode" />

    <Spinner
        android:id="@+id/spinnerCategory"
        android:layout_width="359dp"
        android:layout_height="54dp"
        android:layout_marginTop="16dp"
        android:entries="@array/Categories"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtDescription" />

    <EditText
        android:id="@+id/txtDescription"
        android:layout_width="349dp"
        android:layout_height="86dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="descripcion"
        android:inputType="textPersonName"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtValue" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="107dp"
        android:layout_height="40dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:text="Guardar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerCategory" />

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="361dp"
        android:layout_height="136dp"
        android:layout_marginBottom="28dp"
        android:hint="Resultado"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnIvaInformation"
        android:layout_width="107dp"
        android:layout_height="37dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="4dp"
        android:text="informacion IVA"
        android:textSize="27px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSave" />

    <Button
        android:id="@+id/btnExpensive"
        android:layout_width="140dp"
        android:layout_height="37dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="12dp"
        android:textSize="36px"
        android:text="Mayor Valor"
        app:layout_constraintStart_toEndOf="@+id/btnSave"
        app:layout_constraintTop_toBottomOf="@+id/spinnerCategory" />

    <Button
        android:id="@+id/btnCheap"
        android:layout_width="140dp"
        android:layout_height="36dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="4dp"
        android:textSize="36px"
        android:text="Menor Valor"
        app:layout_constraintStart_toEndOf="@+id/btnIvaInformation"
        app:layout_constraintTop_toBottomOf="@+id/btnExpensive" />

    <Button
        android:id="@+id/btnAverage"
        android:layout_width="140dp"
        android:layout_height="34dp"
        android:layout_marginTop="4dp"
        android:textSize="30px"
        android:layout_marginEnd="112dp"
        android:text="Promedio precios"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCheap" />
</androidx.constraintlayout.widget.ConstraintLayout>